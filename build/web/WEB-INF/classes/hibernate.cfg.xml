<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.datasource">BUSINESS</property>
        <property name="hibernate.current_session_context_class">jta</property>
        <property name="hibernate.query.factory_class">org.hibernate.hql.internal.classic.ClassicQueryTranslatorFactory</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.use_sql_comments">true</property>
        <property name="hibernate.connection.autocommit">false</property>    
        <property name="hibernate.connection.release_mode">on_close</property>
        <!--MAPPINGS-->
    
        <mapping class="com.newsoft.tallerservicio.entidades.Customers"/>
        <mapping class="com.newsoft.tallerservicio.entidades.Employees"/>
        <mapping class="com.newsoft.tallerservicio.entidades.Orders"/>
        <mapping class="com.newsoft.tallerservicio.entidades.OrderDetails"/>
        <mapping class="com.newsoft.tallerservicio.entidades.Payments"/>
        <mapping class="com.newsoft.tallerservicio.entidades.Offices"/>
        <mapping class="com.newsoft.tallerservicio.entidades.Products"/>
        <mapping class="com.newsoft.tallerservicio.entidades.ProductLines"/>
          
    </session-factory>
</hibernate-configuration>
